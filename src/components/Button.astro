---
type ButtonColor = 'red' | 'black' | 'transparent';

interface Props {
  color: ButtonColor;
}

const { color } = Astro.props;
---

<button
  type="button"
  class:list={[
    'font-extrabold leading-none',
    color === 'red' && 'bg-[#f94f4f] px-10 py-6 text-[18px] text-white',
    color === 'black' && 'bg-[#191921] px-10 py-6 text-[18px] text-white',
    color === 'transparent' && 'border-b-2 border-[#f94f4f] bg-transparent pb-2 text-[15px] text-[#f94f4f]',
  ]}
>
  <span>
    <slot />
  </span>
</button>
